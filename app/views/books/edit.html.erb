<h1 class="edit-name">Editing Book</h1>

<%= form_with model: @book do |f| %>

<div class="edit-title">Title</div>
  <%= f.text_field :title %>

<div class="edit-body">Body</div>
  <%= f.text_area :body %>

<div class="edit-submit">
<%= f.submit 'Update Book' %>
</div>

<% end %>

<%= link_to "Show", book_path(@book.id) %>
